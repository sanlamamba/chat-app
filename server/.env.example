# Server Configuration
NODE_ENV=development
PORT=3000
LOG_LEVEL=debug

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/realtime-chat
DB_POOL_SIZE=10

# Redis Configuration (Optional but recommended for production)
REDIS_URL=redis://localhost:6379

# Security
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
CORS_ORIGIN=*

# Rate Limiting
RATE_LIMIT_MESSAGES_PER_SECOND=10
RATE_LIMIT_ROOMS_PER_HOUR=5
RATE_LIMIT_COMMANDS_PER_MINUTE=10

# Performance
MAX_CONNECTIONS=100000
HEARTBEAT_INTERVAL=30000
CONNECTION_TIMEOUT=60000

# Cache TTL (in seconds)
CACHE_TTL_ROOM_INFO=300
CACHE_TTL_USER_INFO=600
CACHE_TTL_MESSAGE_HISTORY=60

# Message Configuration
MAX_MESSAGE_LENGTH=4096
MESSAGE_HISTORY_LIMIT=20

# Room Configuration
MAX_ROOM_NAME_LENGTH=50
MIN_ROOM_NAME_LENGTH=3
MAX_ROOMS_PER_USER=10

# User Configuration
MAX_USERNAME_LENGTH=30
MIN_USERNAME_LENGTH=2

# Monitoring
ENABLE_METRICS=true
METRICS_COLLECTION_INTERVAL=300000

# Development/Debug
ENABLE_DEBUG_LOGS=true
ENABLE_QUERY_LOGGING=false